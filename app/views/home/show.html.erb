<%=render 'header'%>	
<div id="left">

<div class="side-box">
<h4>Messages</h4>
<span id="inbox"><%=link_to image_tag("e_mail.png")+'Private message',{:controller=>"books",:action=>"new"},{:class=>"sidebox-content"}%></span>
<div class="line_separator"></div>
<span id="request"><%=link_to image_tag("message.png")+'Requests & Responses',{:controller=>"books",:action=>"new"},{:class=>"sidebox-content"}%></span>
</div>
      <%= select_tag(:school, options_for_select([
             ['Make a Post',1 ],
             ['Question',2],
             ['I need a study buddy',3],
             ['I want to borrow a textbook',4],
             ['Can anybody give me class materials?',5],
             ['I need help',6],
             ['I need a roommate',7],
      ]),:id=>"status") %>
     <%=form_for (Post.new) do |f|%>
        <%=f.text_area :content,:id=>"general-field",:class=>" round",:rows=>"1"%>
        <%=f.submit 'post',:class=>"postbutton"%>
     <%end%>

    <div class="side-box">
      <%= render 'books/index' %>

      <h4>Reserved Books <span id=reserved-book-quantity></span></h4>
      <table id="reserved-books-table">
        <tbody></tbody>
      </table>
    </div>
 
    <div class="side-box">
      <h4>My Studdy buddies</h4>
      <%=link_to "Start a group",{:controller=>"books",:action=>"new"},:class=>"group"%> 
<div class="ui-helper-hidden group-form">group name <br/>group description<br/>max No:<br/> <span id="create">create</span></div>

<div class="ui-helper-hidden classmates">title="invite your classmates" list of classmates</div>

    </div>

  </div>
</div>

  

<div id="center">
  <p id="suggest" class="ui-helper-hidden"><b id="suggest">Are you sure about this?</b></p>
  <div class="container" id="communication">
    <table id="posts-table">
      <tbody></tbody>
    </table>
    <div class="notification" id="inbox-partial"></div>
  </div>
    

   
  </div>
</div>
