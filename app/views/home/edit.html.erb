<%= render 'header'%>
  
  <h2 style="color:#00AFF0;">Edit profile</h2>
  <div style="float:left;width:250px;">
  <ul class="edit-form">
  <li id="details"><a href="#">Basic details</a></li> 
  <div class="edit-line"></div>
  <li  id="bookform"><a href="#">Books</a></li>
