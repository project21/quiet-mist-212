    <li id="setting"><a href="#"> Account settings</a></li>
  </ul>
  </div>
  <div style="float:left;">
  <div class="form-panels" id="user-form">
    <fieldset>
      <legend>Basic details</legend>
      <%=form_for current_user, :url => '/users' do |f|%>
        <% if current_user.school_id %>
          <p>
          School Name:
          <span style="margin-left:40px;"><%= current_user.school_name %></span>
          </p>
        <% else %>
          <%= f.label :school_name %><span style="color:red;margin-right:2px;">*</span>
          <%= f.text_field :school_name,:size=>"45",:class=>"round",:id=>"school_name" %>
          <%= f.hidden_field :school_id, :id => 'school_id' %>
        <% end %>
        <br/>

        <%= f.label :major %><span style="color:red;margin-right:2px;">*</span>
        <%= f.text_field :major,:class=>"round",:id=>"user_major" %><br/>
        <%= f.hidden_field :major_id, :id => 'major_id' %>

        <%= f.label :HighSchool %><span style="color:red;margin-right:2px;">*</span>
        <%= f.text_field :highschool,:size=>"45",:class=>"round" ,:id=>"hschool"  %><br/>
       
          <%= f.submit "save and continue",{:class=>"savebutton" }%>
      <%end%>
   </fieldset>
  </div>

  <fieldset class="form-panels ui-helper-hidden" id="books-form">
    <legend>Add Books</legend>

    <%= render 'books/index' %>
    <br />

    <table id="posts-table">
      <tbody></tbody>
    </table>

    <%= form_tag '#' do %>
      <%= submit_tag "save and continue", {:class=>"savebutton" }%>
    <% end %>
  </fieldset>

  <fieldset id="edit-course-profile" class="form-panels ui-helper-hidden" >
    <legend>Your current classes</legend>
    <table class="courses-table">
      <tbody></tbody>
    </table>
    <br />

    <%= form_for Course.new do |c|%>
      <%= c.hidden_field :id %>
      <%= c.label :subject, 'Class' %><span style="color:red;margin-right:2px;">*</span>
      <%= c.text_field :subject,:size=>"45",:class=>"round",:placeholder=>"e.g Math101"%>
      
        <%= c.submit "Add",{:class=>"add"} %>
     
    <%end%>

    <%= form_tag '#', :id => 'edit-courses-form' do %>
      <%= submit_tag "save and continue", {:class=>"savebutton" }%>
    <% end %>
  </fieldset>

  <fieldset id="taken-classes" class="form-panels ui-helper-hidden">
    <legend>Classes taken in the past</legend>
    <table class="courses-table">
      <tbody></tbody>
    </table>
    <br />

    <%= form_for Course.new do |c|%>
      <%= c.hidden_field :id %>
      <%= c.label :subject, 'Class' %>
      <%= c.text_field :subject,:size=>"45",:class=>"round",:placeholder=>"(optional)" %>
      <%= c.submit "Add",{:class=>"add"} %>
    <%end%>

    <br/>
    <%= form_tag '#', :id => 'edit-taken-courses-form' do %>
      <%= submit_tag "save and continue", {:class=>"finalbutton" }%>
    <% end %>
    </p>
  </fieldset>

