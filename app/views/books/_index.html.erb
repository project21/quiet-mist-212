<section id="book-app">
  
  <header>
    <h1>My Books</h2>
    <h2 class="book-space"> <a class="listbook" href="#" title="add a book to your profile" >List</a> </h5>
    <h2 class="book-space"> <a class="reservebook"  href="#" title="Reserve a book from your peers" >Reserve</a> </h5>
  </header>

  <div id="new-book-form" class="ui-helper-hidden">
    <%= form_for Book.new do |f| %>
      <%= f.search_field :title ,:class=>"addbook-field",:placeholder=>"Search and list your textbook "%>
      <%= f.submit "Search&list", {:class=>"addbookbutton"} %>
    <%end%>
  </div>
 
 <div id="reserve-book-form" class="ui-helper-hidden">
    <%= form_for Book.new do |f| %>
      <%= f.search_field :title ,:class=>"addbook-field",:placeholder=>"Search textbooks you want to reserve "%>
      <%= f.submit "Search&Reserve", {:class=>"addbookbutton"} %>
    <%end%>
  </div>

  <table id="books-table">

    <tbody></tbody>

  </table>

 
 <!-- <span class="bookfound">Books found <span class="loading"><%=image_tag('loading.gif')%></span></span>-->
</section>
