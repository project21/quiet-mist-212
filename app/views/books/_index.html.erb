<section id="book-app">
  
  <header>
    <h1>My Books</h2>

    <h2 class="book-space"> <a class="listbook" href="#" title="add a book to your profile" >List - Sell a book</a> </h2>

    <div id="new-book-form" class="ui-helper-hidden">
      <%= form_for Book.new do |f| %>
        <%= f.search_field :title, :class=>"addbook-field",:placeholder=>"Search for the book you are listing"%>
        <%= f.submit "Search", {:class=>"addbookbutton"} %>
      <%end%>
    </div>

    <h2 class="book-space"> <a class="reservebook"  href="#" title="Reserve a book from your peers" >Reserve - Get a book</a> </h2>

    <div id="reserve-book-form" class="ui-helper-hidden">
      <%= form_for Book.new do |f| %>
        <%= f.search_field :title, :class=>"addbook-field",:placeholder=>"Search for the book you are reserving"%>
        <%= f.submit "Search", {:class=>"addbookbutton"} %>
      <%end%>
    </div>
  </header>

  <hr/>

  <table id="books-table">

    <tbody></tbody>

  </table>

 
 <!-- <span class="bookfound">Books found <span class="loading"><%=image_tag('loading.gif')%></span></span>-->
</section>
