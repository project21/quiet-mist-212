<div style="margin-top:15px;">
<div style="margin-left:55px;"><%= image_tag("machinelogo2.jpg", :alt => "camp",:class=>"logo") %></div>
<div class="headerline"></div>
</div>
<%= form_for(resource, :as => resource_name ,:url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="registration">
<h2 Style="margin-top:70px;">Sign up</h2>

<table>
  
  <tr><td><label>First name</label></td>
  <td><%= f.text_field :firstname,:class=>"round" %></td></tr>

<tr><td><label>Last name</label></td>
  <td><%= f.text_field :lastname,:class=>"round" %></td></tr>

<tr><td> <label>Major</label></td>
  <td><%= select_tag(:major_id, options_for_select([['undeclared',1 ],['computer science',2]]),:class=>"round") %></td></tr>

  
<tr><td><label>Email</label></td>
  <td><%= f.text_field :email,:class=>"round" %></td></tr>

<% if @user.password_required? %>  
   <tr><td><%= f.label :password %></td>
  <td><%= f.password_field :password,:class=>"round" %></td></tr>

   <tr><td><%= f.label :password_confirmation %></td>
  <td><%= f.password_field :password_confirmation ,:class=>"round"%></td></tr>
<% end %>

<tr><td><label>Sex</label></td>
 <td><%= select_tag(:sex_id, options_for_select([['Male',1 ],['Female',2]]),:class=>"round") %></td></tr>

<tr><td><label>Zipcode</label></td>
  <td><%= f.text_field :zipcode,:class=>"round" %></td></tr>

</table>
  <p><%= f.submit "Sign up",:class=>"sign_up_button" %></p>
<% end %>
<%= render :partial => "devise/shared/links" %>

</div>
<div style="margin-top:40%;%;"><%=render 'footer'%></div>
