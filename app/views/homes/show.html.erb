  <div class="container" id="communication">
    <div id="communication-content" class="ui-helper-hidden">
      <table id="book-requests">
        <tbody></tbody>
      </table>
    </div>

    <div id="posts-container">
      <fieldset class="field-wrapper">
        <%= form_for (Post.new), remote:true, html:{multipart:true, 'data-type' => 'json'} do |f| %>
          <div id="course-check-box-container" style="display:none;">
            <%= f.collection_check_boxes(:course_id, current_user.courses, :id,:name, :class=>"check-course") %>
          </div>
          <script>
            var cont = $('#course-check-box-container')
            cont.find(':checkbox').hide()
            cont.show()
          </script>
          <span id="status"> <%= f.select(:post_type,options_for_select([

                   ['Post type:',1 ],
                   ['Question:',2],
                   ['Material upload:',3],
                   ['Textbook:',4],
                   ['Roommate:',5],
                   ['Homework:',6],
                   ['Tutor:',7],
                   ['Study buddy:',8],

            ])) %></span>
          <%= f.text_area :content, id:"general-field", class:"round", rows:1 %>

          <div style="float:left;">
            <a href="#" id="material" class="uploads"><img src="/assets/material.png"/>Attach File</a>
            &nbsp;
            <%= f.file_field :attachment, id:"material-field", class:"ui-helper-hidden", rows:1 %>
            <!--
            <a href="#" id="audio" class="uploads"><img src="/assets/lecture-icon.png"/>Lecture</a>
            -->
            <%#= f.file_field :attachment, id:"audio-field", class:"ui-helper-hidden", rows:1 %>
          </div>
          <%= f.submit 'post',:class=>"postbutton"%>
          <div style="clear:both;"> </div>
        <%end%>
         
     </fieldset>
     
      <table id="posts-table" style="table-layout:fixed;width:500px;">
        <tbody></tbody>
      </table>
    </div>
   
   
